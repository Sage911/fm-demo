<% provide(:title, "Login") %>
<h1>Login</h1>

<%= form_for(:session, url: login_path) do |f| %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "Log in" %>

  <br>

  <%= f.check_box :remember_me %>
  <span>Remember me on this computer</span>
  
<% end %>

<p>New user? <%= link_to "Sign up", signup_path %></p>
